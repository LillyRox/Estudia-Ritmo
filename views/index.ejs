      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
      margin: 30px 0;
    }
    
    .grade-card {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      width: 100%;
      max-width: 500px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-left: 5px solid #4e54c8;
    }
    
    .grade-card:hover {
