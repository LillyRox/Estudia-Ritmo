    }
    
    /* Secciones generales */
    section {
      background: white;
      border-radius: 12px;
      padding: 30px;
      margin: 30px 0;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    section:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
    }
    
    h2 {
      font-size: 2rem;
      color: #4e54c8;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 3px solid #8f94fb;
    }
    
    h3 {
      font-size: 1.7rem;
      color: #4e54c8;
      margin-bottom: 20px;
      position: relative;
      display: inline-block;
    }
    
    h3:after {
